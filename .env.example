# Spot Trading - Environment Configuration
# Copy this file to .env and configure with your API keys

# =============================================================================
# ASPIRADORA BACKEND CONFIGURATION
# =============================================================================
ASPIRADORA_BASE_URL=http://localhost:3000
ASPIRADORA_API_KEY=your_aspiradora_api_key_here

# =============================================================================
# EXTERNAL APIs (OPTIONAL FALLBACKS)
# =============================================================================

# CoinGecko API (for price data fallback)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Binance API (for additional data sources)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# =============================================================================
# LLM INTEGRATION (FOR NEWS ANALYSIS)
# =============================================================================

# OpenAI GPT (for market context analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Deepseek API (alternative LLM)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Enable debug mode (true/false)
DEBUG_MODE=true

# API timeout in seconds
API_TIMEOUT_SECONDS=30

# Cache duration in minutes
CACHE_DURATION_MINUTES=5

# Auto-refresh interval in seconds
AUTO_REFRESH_INTERVAL_SECONDS=60

# =============================================================================
# TRADING PARAMETERS
# =============================================================================

# Deep drop alert threshold (percentage, negative value)
DEEP_DROP_THRESHOLD=-0.05

# Rebound alert threshold (percentage, positive value)
REBOUND_THRESHOLD=0.03

# Maximum number of alerts to show
MAX_ALERTS=10

# Risk assessment period in days
RISK_ASSESSMENT_DAYS=180

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Theme mode (light/dark/system)
THEME_MODE=system

# Enable haptic feedback (true/false)
ENABLE_HAPTIC_FEEDBACK=true

# Animation duration in milliseconds
ANIMATION_DURATION_MS=300

# =============================================================================
# LOGGING & ANALYTICS
# =============================================================================

# Enable detailed logging (true/false)
ENABLE_DETAILED_LOGGING=false

# Log level (error/warning/info/debug)
LOG_LEVEL=info

# Analytics provider (none/firebase/custom)
ANALYTICS_PROVIDER=none